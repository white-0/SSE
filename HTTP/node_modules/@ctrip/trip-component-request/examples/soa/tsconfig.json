{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "soa.ts",
    "typings/**/*",
    "typings/*",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "es",
    "__mocks__/*",
    "__mocks__/**/*",
    ".cache",
    "__*"
  ]
}
