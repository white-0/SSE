{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "outDir": "libs",
        "baseUrl": ".",
        "lib": [
            "es2015",
            "es2016",
            "es2015.promise",
            "scripthost",
            "dom"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "path": {
        "*": ["types/*"]
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}
