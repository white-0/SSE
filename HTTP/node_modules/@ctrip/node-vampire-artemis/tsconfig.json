{
  "compilerOptions": {
    
      "outDir": "./dist",
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "skipLibCheck": true,
      "types": [
          "node",
          "mocha",
      ],
      "declaration":true,
       "declarationDir":"./types"
  },
  "include": [
      "./src",
      "./typings"
  ]
}
