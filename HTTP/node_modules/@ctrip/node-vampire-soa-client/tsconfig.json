{
    "compilerOptions": {
        "allowJs": false,
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "declaration":true,
        "outDir": ".",
        "baseUrl": ".",
        "lib": [
            "es2015",
            "es2016",
            "es2015.promise",
            "scripthost",
            "dom"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "index.ts",
        "index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "test",
        "./package.json",
    ]
}
